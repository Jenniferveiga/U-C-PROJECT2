  <div class="container-fluid">
    <div class="row">
      {{#each posts}}
      <div class="col-lg-4 col-md-6 col-sm-12 flip" id="savedGameCard">
        <div class="front" style="background-image: url({{dataValues.background_image}})">
          <!--h1 class="text-shadow">{{dataValues.name}}</h1-->
        </div>
        <div class="back">
          <h2>{{dataValues.name}}</h2>
          <h7>Released: {{dataValues.released}}</h7>
          {{#if dataValues.metacritic}}
          <h7>Metacritic: {{dataValues.metacritic}}</h7>
          {{/if}}
          <p class="descr">{{dataValues.description_raw}}</p>
          <h7>Contact Name: {{dataValues.contact_name}}</h7><br>
          <i class="fa fa-whatsapp" aria-hidden="true"></i><h7> <a href="https://api.whatsapp.com/send?phone={{dataValues.phone}}">{{dataValues.phone}}</a></h7><br>
          <i class="fa fa-envelope" aria-hidden="true"></i><h7> <a href="mailto:{{dataValues.email}}">{{dataValues.email}}</a></h7><br>
        </div>

      </div>
      {{/each}}
    </div>
  </div>

</div>

