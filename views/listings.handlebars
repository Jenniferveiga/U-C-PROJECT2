<div class="container is-fullhd">
      <div class="container is-fluid">
        <div class="hero-body">
        <h1 class="title" style = "text-align: center; color: white">
          UBER GAMES
        </h1>

        <h2 class="subtitle" style = "text-align: center; color: white">
          The greatest resource for buying games!
        </h2>
        
                <div class="column is-full">
                  <div class="column is-11 is-offset-4">
                    <a href="/post"><button class="button"><span class="fa fa-plus" ></span>Add New Listing</button></a>
                    <a href="/listings"><button class="button"><span class="fa fa-eye"></span>All listings</button></a>
                  </div>
                </div>
          </div>
        </div>
      </div>

<div class="hero-body">

<div class="container-fluid">
   <div class="row">
      {{#each posts}}
      <div class="col-lg-4 col-md-6 col-sm-12 flip" id="savedGameCard">
         <div class="front" style="background-image: url({{dataValues.background_image}})">
            <h1 class="text-shadow">{{dataValues.name}}</h1>
         </div>
         <div class="back">
            <h2>{{dataValues.name}}</h2>
            <h7>Released: {{dataValues.released}}</h7>
            <br>
            {{#if dataValues.metacritic}}
            <h7>Metacritic: {{dataValues.metacritic}}</h7>
            {{/if}}
            <p class="descr">{{dataValues.description_raw}}</p>
            <div class="WAButton"></div>
         </div>
      </div>
      {{/each}}
   </div>
</div>

</div>


