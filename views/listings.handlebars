  <div class="jumbotron" style="background-color: rgb(15, 135, 233); " >
      <h1 style = "text-align: center; color: white">UBER GAMES</h1>
      <h3 style = "text-align: center; color: white"> The greatest resource for buying games!</h3>
      <hr>
      <a href="/post"><button class="btn btn-danger btn-lg"><span class="fa fa-plus"></span> Add New Listing
          </button></a>
      <a href="/listings"><button class="btn btn-danger btn-lg"><span
            class="fa fa-eye"></span> All listings</button></a>
  </div>
  <div class="row">
    <div class="col-md-12 blog-container">
      {{#each posts}}
        <div class="panel panel-default" data-post="{{id}}">
          <div class="panel-heading">
            <button class="delete btn btn-danger">x</button>
            <button class="edit btn btn-info">EDIT</button>
            <h2>{{title}}</h2>
              <small>{{createdAt}}</small>
            </h2>
            <h5 style="float: right; color: blue; margin-top: -10px;">Written by: {{Condition.name}} </h5>
          </div>
          <div class="panel-body">
            <p>{{body}}</p>
          </div>
        </div>
      {{/each}}
    </div>
  </div>
</div>
