<div class="container">
    <div class="jumbotron">
      <h1>Uber Games</h1>
      <h3>The greatest resource for buying games!</h3>
      <hr>
      <a href="/listings"><button class="btn btn-danger btn-lg"><span class="fa fa-eye"></span> View Listings</button></a>
    </div>
    <div class="row">

      <div class="col-12">

        <div class="card">
          <div class="card-header">
            <h3><strong>Add Listing</strong></h3>
          </div>
          <div class="card-body">
            <form id="cms">

              <div class="form-group">
                <label for="gametitle">Game Title</label>
                <input type="text" class="form-control" id="title">
              </div>


              <div class="form-group">
                <label for="description">Description</label>
                <input type="text" class="form-control" id="body">
              </div>

              <div class="form-group">
                <label for="price"> Price </label>
                <input type="text" class="form-control" id="price">
              </div>

             
              <div class="form-group">
                <label for="category">Condition:</label>
                <select class="form-control" id="condition">
                </select>
              </div>
              <br>
              <div class="text-right">
                <button type="submit" class="btn btn-success submit">Submit</button>
              </div>
            </form>
          </div>
        </div>

      </div>
    </div>
  </div>

